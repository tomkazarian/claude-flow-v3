# =============================================================================
# Server Configuration
# =============================================================================
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=./data/sweepstakes.db

# =============================================================================
# Redis (required for BullMQ job queues)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# CAPTCHA Solving Services
# =============================================================================
# Provider: "2captcha" | "anti-captcha" | "capsolver"
CAPTCHA_PROVIDER=2captcha
TWO_CAPTCHA_API_KEY=
ANTI_CAPTCHA_API_KEY=
CAPSOLVER_API_KEY=

# =============================================================================
# Gmail OAuth2 (for confirmation email parsing)
# =============================================================================
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_REDIRECT_URI=http://localhost:3000/api/auth/gmail/callback
GMAIL_REFRESH_TOKEN=

# =============================================================================
# Twilio (for SMS verification handling)
# =============================================================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# =============================================================================
# Proxy Configuration
# =============================================================================
# Provider: "brightdata" | "smartproxy" | "oxylabs" | "residential"
PROXY_PROVIDER=brightdata
PROXY_API_KEY=
PROXY_HOST=
PROXY_PORT=
PROXY_USERNAME=
PROXY_PASSWORD=

# =============================================================================
# Security / Encryption
# =============================================================================
# 32-byte hex key for AES-256 encryption of PII data
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=

# JWT secret for API authentication
JWT_SECRET=

# =============================================================================
# Social Media API Tokens (for social-entry sweepstakes)
# =============================================================================
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=

INSTAGRAM_TOKEN=

FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# =============================================================================
# Notification Services
# =============================================================================
# Discord webhook for win notifications
DISCORD_WEBHOOK_URL=

# Slack webhook for win notifications
SLACK_WEBHOOK_URL=

# Email notifications (SMTP)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
NOTIFICATION_EMAIL=

# =============================================================================
# Rate Limiting & Automation Tuning
# =============================================================================
# Max concurrent browser instances
MAX_BROWSER_INSTANCES=3

# Delay range between entries (milliseconds)
MIN_ENTRY_DELAY=2000
MAX_ENTRY_DELAY=8000

# Max entries per sweep per day
MAX_DAILY_ENTRIES_PER_SWEEP=1

# Global daily entry cap
MAX_DAILY_ENTRIES_TOTAL=100
