{
  "name": "sweepstakes-platform",
  "version": "0.1.0",
  "private": true,
  "description": "Autonomous sweepstakes entry platform with Fastify backend, React frontend, Playwright automation, and BullMQ job queues",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/server/index.ts",
    "dev:client": "vite",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p tsconfig.build.json",
    "build:client": "vite build",
    "start": "node dist/server/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "lint": "tsc --noEmit && echo 'Type check passed'",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:seed": "tsx src/server/db/seed.ts",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "2captcha-ts": "^2.4.1",
    "@fastify/cors": "^10.0.1",
    "@fastify/rate-limit": "^10.2.1",
    "@fastify/static": "^8.0.3",
    "better-sqlite3": "^11.7.0",
    "bullmq": "^5.31.0",
    "cheerio": "^1.0.0",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.38.3",
    "eventemitter3": "^5.0.1",
    "fastify": "^5.2.1",
    "googleapis": "^144.0.0",
    "got": "^14.4.5",
    "ioredis": "^5.4.2",
    "node-cron": "^3.0.3",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "playwright": "^1.50.1",
    "playwright-extra": "^4.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "twilio": "^5.4.3",
    "ulid": "^2.3.0",
    "undici": "^7.3.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.1",
    "@tanstack/react-query": "^5.66.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.13.4",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "clsx": "^2.1.1",
    "drizzle-kit": "^0.30.4",
    "lucide-react": "^0.475.0",
    "postcss": "^8.5.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.1.5",
    "recharts": "^2.15.1",
    "tailwind-merge": "^3.0.1",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "vitest": "^3.0.5",
    "zustand": "^5.0.3"
  }
}
